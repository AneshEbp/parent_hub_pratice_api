{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "apps/api/src",
  "compilerOptions": {
    "webpack": true,
    "tsConfigPath": "apps/api/tsconfig.app.json",
    "assets": [
      {
        "include": "apps/api/src/i18n/**/*",
        "outDir": "dist/apps/api/i18n"
      }
    ]
  },
  "monorepo": true,
  "root": "apps/api",
  "projects": {
    "api": {
      "type": "application",
      "root": "apps/api",
      "entryFile": "main",
      "sourceRoot": "apps/api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/api/tsconfig.app.json",
        "assets": [
          {
            "include": "i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/api"
          }
        ]
      }
    },
    "cms-api": {
      "type": "application",
      "root": "apps/cms-api",
      "entryFile": "main",
      "sourceRoot": "apps/cms-api/src",
      "compilerOptions": {
        "tsConfigPath": "apps/cms-api/tsconfig.app.json",
        "assets": [
          {
            "include": "i18n/**/*",
            "watchAssets": true,
            "outDir": "dist/apps/cms-api"
          }
        ]
      }
    },
    "data-access": {
      "type": "library",
      "root": "libs/data-access",
      "entryFile": "index",
      "sourceRoot": "libs/data-access/src",
      "compilerOptions": {
        "tsConfigPath": "libs/data-access/tsconfig.lib.json"
      }
    },
    "authentication": {
      "type": "library",
      "root": "libs/authentication",
      "entryFile": "index",
      "sourceRoot": "libs/authentication/src",
      "compilerOptions": {
        "tsConfigPath": "libs/authentication/tsconfig.lib.json"
      }
    },
    "email": {
      "type": "library",
      "root": "libs/email",
      "entryFile": "index",
      "sourceRoot": "libs/email/src",
      "compilerOptions": {
        "tsConfigPath": "libs/email/tsconfig.lib.json"
      }
    },
    "social-auth": {
      "type": "library",
      "root": "libs/social-auth",
      "entryFile": "index",
      "sourceRoot": "libs/social-auth/src",
      "compilerOptions": {
        "tsConfigPath": "libs/social-auth/tsconfig.lib.json"
      }
    }
  }
}